<Window x:Class="CommandProjectMyPartWindow.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EMIAS - Врач" Height="300" Width="350">
    <Grid>
        <Label Content="Номер сотрудника" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="EmployeeNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="300"/>
        <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Width="300"/>
        <CheckBox Name="IsAdminCheckBox" Content="Я админ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0"/>
        <Label Content="Код администратора" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0" Visibility="Hidden" Name="AdminCodeLabel"/>
        <TextBox Name="AdminCodeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" Width="300" Visibility="Hidden"/>
        <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,244,0,0" Click="LoginButton_Click"/>
        <Button Content="Вернуться" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="152,244,0,0" Click="BackButton_Click"/>
    </Grid>
</Window>